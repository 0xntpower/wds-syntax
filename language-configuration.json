{
    "comments": {
        "lineComment": "$$",
        "blockComment": ["$*", "*$"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "'", "close": "'", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*\\.block\\s*\\{|^\\s*\\.(for|if|foreach|while|do)\\s*.*\\{\\s*$",
            "end": "^\\s*\\}\\s*$"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
        "increaseIndentPattern": "^\\s*\\.(block|for|if|else|elsif|foreach|while|do)\\b.*\\{\\s*$",
        "decreaseIndentPattern": "^\\s*\\}\\s*$"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*\\.block\\s*\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*\\.for\\s*\\(.*\\)\\s*\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*\\.if\\s*\\(.*\\)\\s*\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*\\.else\\s*\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*\\.elsif\\s*\\(.*\\)\\s*\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*\\.foreach\\s*\\(.*\\)\\s*\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*\\.while\\s*\\(.*\\)\\s*\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*\\.do\\s*\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": ".*\\{\\s*$",
            "afterText": "^\\s*\\}",
            "action": {
                "indent": "indentOutdent"
            }
        }
    ]
}
